<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.golink.ecommerceb2b">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_icon"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/logo_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".Registration.TermsConditions"></activity>
        <activity android:name=".Chat.AllVendors" />
        <activity android:name=".MyOrders.OrderPage" />
        <activity android:name=".Cart.CartPage" />
        <activity android:name=".Vendor.SingleProduct" />
        <activity android:name=".Orders.OrdersPage" />
        <activity android:name=".Vendor.VendorPage" />
        <activity android:name=".Home.SearchPage" />
        <activity android:name=".Home.HomePage" />
        <activity android:name=".Registration.FillDetails" />
        <activity android:name=".Registration.OtpPage" />
        <activity android:name=".Registration.LogIn" />
        <activity android:name=".Registration.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".MainActivity" />
        <activity android:name=".Chat.PersonalChat" />
        <activity android:name=".Chat.ChatBoard" />
    </application>

</manifest>